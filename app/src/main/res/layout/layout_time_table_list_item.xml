<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="12dp"
    android:paddingHorizontal="@dimen/layout_margin">

    <TextView
        android:id="@+id/tv_cls_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="(정보없음)"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/font_color_default"/>

    <TextView
        android:id="@+id/tv_cls_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cls_name"
        android:layout_marginTop="2dp"
        android:hint="(시간표 없음)"
        android:textSize="@dimen/font_size"
        android:textColor="@color/font_color_999"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_cls_name"
        android:hint="(정보없음)"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/font_color_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>