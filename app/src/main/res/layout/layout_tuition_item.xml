    <TextView
        android:id="@+id/tv_tuition_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:text="(날짜 정보없음)"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tuition_content_cls_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tuition_content_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="(학급 정보없음)"
        android:gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_small"/>

    <TextView
        android:id="@+id/tv_tuition_content_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_cls_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="end"
        android:text="(금액 정보없음)"
        android:textColor="@color/font_color_default"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_small"/>
    
    <View
        android:id="@+id/line_content_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_pay"
        android:layout_marginTop="4dp"
        android:background="@color/line"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>