<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_tuition_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_small"/>

    <TextView
        android:id="@+id/tv_tuition_content_cls_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tuition_content_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_small"/>

    <TextView
        android:id="@+id/tv_tuition_content_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/font_color_default"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_small"/>
    
    <View
        android:id="@+id/line_content_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_pay"
        android:layout_marginTop="4dp"
        android:background="@color/line"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>