<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/tv_tuition_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size"/>

    <TextView
        android:id="@+id/tv_tuition_content_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tuition_content_date"
        android:layout_marginStart="8dp"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size"/>

    <TextView
        android:id="@+id/tv_tuition_content_cls_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>