<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_lightgray_2">

    <TextView
        android:id="@+id/tv_tuition_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/layout_margin_16"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:text="(날짜 정보없음)"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_tuition_content_cls_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_pay"
        android:text="(학급 정보없음)"
        android:gravity="start"
        android:layout_marginStart="@dimen/layout_margin_16"
        android:layout_marginEnd="@dimen/layout_margin_16"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size"/>

    <TextView
        android:id="@+id/tv_tuition_content_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tuition_content_date"
        app:layout_constraintEnd_toStartOf="@id/tv_tuition_content_won"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/font_size"/>

    <TextView
        android:id="@+id/tv_tuition_content_won"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/layout_margin_16"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:gravity="end"
        android:text="원"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size"/>
    
    <View
        android:id="@+id/line_content_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tuition_content_cls_name"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/line_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>