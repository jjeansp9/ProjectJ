<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_tuition_clst_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_account_link"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="@dimen/layout_margin_2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/font_size"/>

    <TextView
        android:id="@+id/tv_tuition_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_account_link"
        app:layout_constraintBottom_toTopOf="@id/tv_tuition_account_no"
        android:layout_marginEnd="8dp"
        android:textColor="@color/red_sub"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_large"
        android:gravity="end"/>

    <TextView
        android:id="@+id/tv_tuition_account_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_account_link"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_small"
        android:gravity="end"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_account_link"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="계좌\n연동"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        android:background="@drawable/selector_bt_account_link"
        android:stateListAnimator="@xml/animate_button_push"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>