<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MenuBriefingActivity">

    <kr.jeet.edu.student.view.CustomAppbarLayout
        android:id="@+id/customAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/customAppbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/spinner_brf_campus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/layout_margin"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="@dimen/layout_margin_16"
            android:paddingVertical="@dimen/layout_margin_12"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_tint="@color/blackgray"
            app:spinner_divider_color="@color/line"
            app:spinner_divider_show="true"
            app:spinner_divider_size="0.4dp"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="@drawable/selector_spinner_item"
            app:spinner_popup_elevation="2dp"
            android:focusable="true"
            android:background="@drawable/bg_campus_spinner"/>

        <ImageView
            android:id="@+id/img_brf_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/layout_brf_year_month"
            app:layout_constraintTop_toBottomOf="@id/spinner_brf_campus"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:src="@drawable/selector_month_back"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_brf_year_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_brf_campus"
            android:layout_marginTop="8dp"
            android:stateListAnimator="@xml/animate_button_push"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_brf_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/tv_brf_month"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/font_color_default"
                android:textAppearance="@style/CalendarHeaderTextAppearance"/>

            <TextView
                android:id="@+id/tv_brf_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_brf_year"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/font_color_default"
                android:textAppearance="@style/CalendarHeaderTextAppearance"/>

            <ImageView
                android:layout_width="29dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/layout_margin_8"
                android:src="@drawable/bt_calendar_nor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_brf_month"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_brf_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/layout_brf_year_month"
            app:layout_constraintTop_toBottomOf="@id/spinner_brf_campus"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:src="@drawable/selector_month_next"/>

        <View
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@id/layout_brf_year_month"
            android:layout_marginHorizontal="@dimen/line_red"
            android:layout_marginTop="8dp"
            android:background="@color/red"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_top"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_briefing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/layout_brf_list_item"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/tv_brf_empty_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="예약 가능한 설명회가 없습니다."
            android:textSize="@dimen/font_size_xlarge"
            android:visibility="gone"
            android:textColor="@color/font_color_666"
            app:layout_constraintTop_toTopOf="@id/line_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>