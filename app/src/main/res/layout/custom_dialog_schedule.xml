<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_layout"
        android:layout_centerInParent="true"
        android:clipToOutline="true">

        <LinearLayout
            android:id="@+id/title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            android:background="@color/popup_title_bg2">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textSize="@dimen/font_size_xlarge"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_dialog_close"
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:layout_constraintTop_toTopOf="@id/title_ly"
            app:layout_constraintBottom_toBottomOf="@id/title_ly"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_vector_close"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:stateListAnimator="@xml/animate_button_push"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_ly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="80dp"
            android:orientation="vertical"
            android:padding="@dimen/layout_margin_16"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_campus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_blue_sub"
                android:textStyle="bold"
                android:hint="캠퍼스 정보 없음"
                android:textSize="@dimen/font_size_large"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_default"
                android:hint="날짜 정보 없음"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_blue_sub"
                android:hint="학급 정보 없음"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_large"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tv_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="캠퍼스 일정 정보 없음"
                android:textColor="@color/font_color_default"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

























