<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MenuTestReserveWriteActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_test_reserve_side"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>

    <View
        android:id="@+id/layout_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/customAppbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_side"
        android:orientation="horizontal"
        android:background="@color/side_test_reserve_write"/>

    <kr.jeet.edu.student.view.CustomAppbarLayout
        android:id="@+id/customAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/customAppbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/root_reserve_write">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_test_reserve_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_test_reserve_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_test_reserve_third"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.36"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_test_reserve_fourth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97"/>

            <LinearLayout
                android:id="@+id/layout_side_left"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:orientation="horizontal"
                android:background="@color/side_test_reserve_write"/>

            <TextView
                android:id="@+id/tv_reserve_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingTop="32dp"
                android:paddingBottom="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:text="@string/test_reserve_write_stu_name"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <EditText
                android:id="@+id/et_reserve_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_name"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"
                android:layout_marginTop="@dimen/tv_test_reserve_write"/>

            <TextView
                android:id="@+id/tv_reserve_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_name"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_gender"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <RadioGroup
                android:id="@+id/rg_test_reserve_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_gender"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_gender"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_test_reserve_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/male"
                    android:textColor="@color/font_color_default"
                    android:textSize="@dimen/font_size"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_test_reserve_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/female"
                    android:textColor="@color/font_color_default"
                    android:textSize="@dimen/font_size" />
                
            </RadioGroup>

            <TextView
                android:id="@+id/tv_reserve_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_gender"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_address"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

<!--            <EditText-->
<!--                android:id="@+id/et_reserve_address"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_constraintTop_toTopOf="@id/tv_reserve_address"-->
<!--                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_address"-->
<!--                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"-->
<!--                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"-->
<!--                android:background="@drawable/bg_edittext"-->
<!--                android:textSize="@dimen/font_size"-->
<!--                android:maxLines="4"-->
<!--                android:focusable="false"-->
<!--                android:inputType="textMultiLine|textNoSuggestions"-->
<!--                android:textColor="@color/font_color_default"-->
<!--                android:paddingHorizontal="@dimen/editbox_padding"-->
<!--                android:paddingVertical="@dimen/editbox_padding_vertical"/>-->

            <TextView
                android:id="@+id/tv_reserve_address_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_address"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_address"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"/>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_reserve_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_reserve_address"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth">



                <EditText
                    android:id="@+id/et_reserve_address_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_address_search"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/test_reserve_write_address_detail"
                    android:textSize="@dimen/font_size"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/font_color_default"
                    android:paddingHorizontal="@dimen/editbox_padding"
                    android:paddingVertical="@dimen/editbox_padding_vertical"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_address_search"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/et_reserve_address_detail"
                    app:layout_constraintBottom_toBottomOf="@id/et_reserve_address_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_address_search"
                    android:text="주소찾기"
                    android:textSize="@dimen/font_size"
                    android:textColor="@color/white"
                    android:stateListAnimator="@xml/animate_button_push"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tv_reserve_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_reserve_address"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_birth"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_reserve_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_birth"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_birth"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext">

                <TextView
                    android:id="@+id/tv_reserve_birth_date_cal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/img_reserve_birth_date_cal"
                    android:paddingHorizontal="@dimen/editbox_padding"
                    android:paddingVertical="@dimen/editbox_padding_vertical"
                    android:textSize="@dimen/font_size"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/img_reserve_birth_date_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/bt_calendar_nor"
                    android:layout_marginEnd="@dimen/layout_margin_12"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_reserve_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_birth"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_grade"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_reserve_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_grade"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_grade"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:hint="초/중/고 학년 선택"
                android:gravity="center"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/blackgray"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_popup_focusable="true"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/bg_edittext"
                app:spinner_item_array="@array/grade"/>

            <TextView
                android:id="@+id/tv_reserve_sc_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_grade"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_sc_name"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_reserve_sc_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_sc_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_sc_name"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/test_reserve_write_select_school"
                android:gravity="center"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/blackgray"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_popup_focusable="true"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/bg_edittext"/>

            <TextView
                android:id="@+id/tv_reserve_stu_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_sc_name"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_stu_contact"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <EditText
                android:id="@+id/et_reserve_stu_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_stu_contact"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_stu_contact"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:maxLength="11"
                android:inputType="number"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"/>

            <TextView
                android:id="@+id/tv_reserve_parent_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_stu_contact"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_parent_name"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <EditText
                android:id="@+id/et_reserve_parent_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_parent_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_parent_name"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"/>

            <TextView
                android:id="@+id/tv_reserve_parent_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_parent_name"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_parent_contact"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <EditText
                android:id="@+id/et_reserve_parent_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_parent_contact"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_parent_contact"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:maxLength="11"
                android:inputType="number"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"/>

            <TextView
                android:id="@+id/tv_reserve_cash_receipts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_reserve_parent_contact"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
                android:text="@string/test_reserve_write_cash_receipts"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/font_color_default"
                android:gravity="end"/>

            <EditText
                android:id="@+id/et_reserve_cash_receipts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_reserve_cash_receipts"
                app:layout_constraintBottom_toBottomOf="@id/tv_reserve_cash_receipts"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:maxLength="20"
                android:inputType="number"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="@dimen/editbox_padding_vertical"/>

            <TextView
                android:id="@+id/tv_cash_receipt_notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_reserve_cash_receipts"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_third"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_fourth"
                android:layout_marginTop="2dp"
                android:text="@string/test_reserve_write_cash_receipts_notice"
                android:textSize="@dimen/font_size_xsmall"
                android:textColor="@color/red_sub"/>

            <TextView
                android:id="@+id/tv_reserve_funnel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_cash_receipt_notice"
                app:layout_constraintStart_toStartOf="@id/guideline_test_reserve_first"
                app:layout_constraintEnd_toStartOf="@id/guideline_test_reserve_second"
                android:paddingVertical="@dimen/tv_test_reserve_write"
                android:layout_marginEnd="@dimen/tv_test_reserve_margin_end"
                android:layout_marginTop="@dimen/tv_test_reserve_margin_top"
