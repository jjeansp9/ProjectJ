<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <kr.jeet.edu.student.view.CustomAppbarLayout
        android:id="@+id/customAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_pattern"
            android:paddingTop="@dimen/layout_margin_16"
            android:paddingBottom="@dimen/layout_margin_16">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_student_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_color01"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/layout_margin">
                
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_profile_v25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_profile_v75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75"/>

                <ImageView
                    android:id="@+id/img_student"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_student"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guideline_profile_v25"
                    android:layout_marginTop="@dimen/layout_margin_16"
                    android:layout_marginBottom="@dimen/layout_margin_16"
                    android:layout_marginStart="@dimen/layout_margin_16"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/img_student"
                    app:layout_constraintTop_toTopOf="@id/img_student"
                    app:layout_constraintEnd_toStartOf="@id/img_student_attendance"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/main_student"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/layout_margin_4"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/font_size_xlarge"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/font_color_default"/>

                    <TextView
                        android:id="@+id/tv_student_name_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/tv_student_name"
                        app:layout_constraintBottom_toBottomOf="@id/tv_student_name"
                        android:text="@string/main_student_sub"
                        android:textSize="@dimen/font_size_large"
                        android:layout_marginStart="@dimen/layout_margin_2"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:id="@+id/tv_student_campus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/img_student"
                    app:layout_constraintBottom_toTopOf="@id/tv_student_school_and_grade"
                    app:layout_constraintEnd_toStartOf="@id/img_student_attendance"
                    android:hint="@string/main_student_campus"
                    android:layout_marginStart="@dimen/layout_margin_4"
                    android:layout_marginEnd="@dimen/layout_margin_4"
                    android:layout_marginTop="@dimen/layout_margin_4"
                    android:textSize="@dimen/font_size_small"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_color_default"/>

                <TextView
                    android:id="@+id/tv_student_school_and_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_student_school_and_grade"
                    app:layout_constraintStart_toEndOf="@id/img_student"
                    app:layout_constraintBottom_toBottomOf="@id/img_student"
                    app:layout_constraintEnd_toStartOf="@id/img_student_attendance"
                    android:layout_marginStart="@dimen/layout_margin_4"
                    android:layout_marginEnd="@dimen/layout_margin_4"
                    android:layout_marginBottom="4dp"
                    android:textSize="@dimen/font_size_small"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_color_default"/>

                <TextView
                    android:id="@+id/tv_non_member_notice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_non_member_notice"
                    app:layout_constraintStart_toEndOf="@id/img_student"
                    app:layout_constraintTop_toBottomOf="@id/layout_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/img_student_attendance"
                    android:layout_marginStart="@dimen/layout_margin_4"
                    android:layout_marginTop="@dimen/layout_margin_4"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="@dimen/font_size_small"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/font_color_default"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_non_member"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_attendance_date"
                    app:layout_constraintStart_toStartOf="@id/guideline_profile_v75"
                    android:layout_marginEnd="@dimen/layout_margin_16"
                    android:layout_marginTop="@dimen/layout_margin_8"
                    android:background="@drawable/bg_nonmember"
                    android:text="비회원"
                    android:textStyle="bold"
                    android:textColor="@color/line"
                    android:gravity="center"
                    android:visibility="invisible"/>
                
                <ImageView
                    android:id="@+id/img_student_attendance"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_calendar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_attendance_date"
                    app:layout_constraintStart_toStartOf="@id/guideline_profile_v75"
                    android:layout_marginEnd="@dimen/layout_margin_16"
                    android:layout_marginTop="@dimen/layout_margin_16"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_attendance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/img_student_attendance"
                    app:layout_constraintEnd_toEndOf="@id/img_student_attendance"
                    app:layout_constraintBottom_toBottomOf="@id/img_student_attendance"
                    app:layout_constraintBottom_toTopOf="@id/tv_attendance_date"
                    android:gravity="center"
                    android:hint="@string/main_attendance"
                    android:textSize="@dimen/font_size"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:shadowRadius="1.0"
                    android:shadowDx="5.0"
                    android:shadowDy="5.0"
                    android:shadowColor="#ffffff"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_attendance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_student_attendance"
                    app:layout_constraintStart_toStartOf="@id/img_student_attendance"
                    app:layout_constraintEnd_toEndOf="@id/img_student_attendance"
                    android:layout_marginTop="@dimen/layout_margin_8"
                    android:layout_marginBottom="@dimen/layout_margin_16"
                    android:text="@string/main_attendance_date"
                    android:textSize="@dimen/font_size"
                    android:textColor="@color/font_color_default"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_student_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                tools:listitem="@layout/layout_main_menu_item"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/layout_margin_16"
                android:layout_marginHorizontal="@dimen/layout_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_menu">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btn_teacher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/selector_main_box"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="@dimen/layout_margin_12">

                        <ImageView
                            android:id="@+id/img_my_teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_menu_teacher"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_my_teacher"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/main_tv_my_teacher"
                            android:textSize="@dimen/font_size_large"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/img_my_teacher"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_teacher_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="@string/main_null_teacher"
                            android:textColorHint="@color/font_color_default"
                            android:textColor="@color/font_color_default"
                            android:textSize="@dimen/font_size_small"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_my_teacher"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btn_attendance_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_main_box"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="@dimen/layout_margin_12">

                        <ImageView
                            android:id="@+id/img_attendance_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_menu_attend"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tv_attendance_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/main_tv_attendance_state"
                            android:textSize="@dimen/font_size_large"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/img_attendance_state"/>

                        <TextView
                            android:id="@+id/tv_attendance_confirm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/main_tv_attendance_confirm"
                            android:textColor="@color/font_color_default"
                            android:textSize="@dimen/font_size_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_attendance_state"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_announcement_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_main_box"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="@dimen/layout_margin_12">

                    <ImageView
                        android:id="@+id/img_announcement_state"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_menu_notify"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/tv_announcement_states"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="start"
                        android:text="@string/main_menu_announcement"
                        android:textSize="@dimen/font_size_large"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/img_announcement_state"
                        app:layout_constraintBottom_toBottomOf="@id/img_announcement_state"
                        app:layout_constraintStart_toEndOf="@+id/img_announcement_state"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_announcement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_announcement_state"
                        android:layout_marginHorizontal="4dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        tools:listitem="@layout/layout_announcement_list_item"
                        android:background="@drawable/bg_white_box"
                        android:layout_marginTop="8dp"
                        android:overScrollMode="never"/>

                    <TextView
                        android:id="@+id/tv_main_empty_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_announcement_states"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="4dp"
                        android:paddingVertical="16dp"
                        android:background="@drawable/bg_white_box"
                        android:gravity="center"
                        android:text="@string/announcement_list_empty"
                        android:textColor="@color/font_color_999"
                        android:textSize="@dimen/font_size"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>